{
  "name": "ozon-parser-api",
  "build": {
    "type": "dockerfile",
    "dockerfilePath": "./Dockerfile"
  },
  "runtime": {
    "port": 8000,
    "command": "python -m uvicorn api.main:app --host 0.0.0.0 --port 8000",
    "healthCheck": {
      "path": "/api/health",
      "interval": 30,
      "timeout": 10,
      "unhealthyThreshold": 3
    }
  },
  "resources": {
    "cpu": "1",
    "memory": "1024Mi",
    "replicas": 1
  },
  "deployment": {
    "restartPolicy": "OnFailure",
    "maxRetries": 3
  }
}
